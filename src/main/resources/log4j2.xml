<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="trace" name="huadiao" packages="">
    <Appenders>
        <!--当日志文件到达指定大小时, 创建新日志文件-->
        <RollingFile name="rollingFile"
                     fileName="huadiaoLog/huadiao.log" filePattern="huadiaoLog/huadiao-%d{yyyy-MM-dd-HH-mm}-%i.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} : %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="1GB" />
            </Policies>
        </RollingFile>
        <!--输出到控制台-->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d [%t] %-5level %logger{36} : %msg%n%throwable}" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="rollingFile"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>